use std::convert::from_bits_unsigned;
use std::crypto::blake2s_multi_input;

const COMMAND_COMPONENT_SIZE_BITS: u16 = COMMAND_COMPONENT_SIZE * BYTE_BITS;

type SerializedCommand = [bool; COMMAND_COMPONENT_SIZE_BITS];
type SerializedCommandGroup = [SerializedCommand; COMMAND_GROUP_SIZE];

fn bits_to_bytes(bits: SerializedCommand) -> [u8; COMMAND_COMPONENT_SIZE] {
    let mut bytes = [0 as u8; COMMAND_COMPONENT_SIZE];

    for i in (0 as u16)..COMMAND_COMPONENT_SIZE {
        let mut byte_bits = [false; BYTE_BITS];
        for j in (0 as u16)..BYTE_BITS {
            byte_bits[j] = bits[i * BYTE_BITS + j];
        }
        bytes[i] = from_bits_unsigned(byte_bits);
    }
    bytes
}

fn compute_leaf_hashes(
    components: SerializedCommandGroup,
    privacy_salt: PrivacySaltBits,
) -> [ComponentGroupLeafDigestBits; COMMAND_GROUP_SIZE] {
    let mut component_leaf_hashes = [[false; COMPONENT_GROUP_LEAF_DIGEST_BITS]; COMMAND_GROUP_SIZE];

    for i in (0 as u32)..(COMMAND_GROUP_SIZE as u32) {
        component_leaf_hashes[i] = blake2s_multi_input(
            compute_nonce(privacy_salt, ComponentGroupEnum::COMMANDS_GROUP as u32, i as u32),
            components[i]
        );
        //let a = bits_to_bytes(components[i]);
    }
    component_leaf_hashes
}

fn compute_commands_group_hash(
    components: SerializedCommandGroup,
    privacy_salt: PrivacySaltBits,
) -> NodeDigestBits {
    let component_leaf_hashes = compute_leaf_hashes(components, privacy_salt);

    let mut padded_leaves = [[false; COMPONENT_GROUP_LEAF_DIGEST_BITS]; 2];
    for i in 0..1 {
        padded_leaves[i] = component_leaf_hashes[i];
    }
    get_merkle_tree_from_2_component_group_leaf_digests(padded_leaves)
}
